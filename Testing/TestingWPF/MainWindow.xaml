<Window x:Name="MainScreen" x:Class="TestingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingWPF"
        mc:Ignorable="d"
        Title="This is a test" Height="350" Width="525" WindowStyle="ThreeDBorderWindow" Loaded="MainScreen_Loaded">
    <Grid x:Name="grdView">
        <UniformGrid HorizontalAlignment="Left" Height="206" Margin="56,45,0,0" VerticalAlignment="Top" Width="443" RenderTransformOrigin="0.5,0.5">
            <UniformGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.365"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-1.106"/>
                </TransformGroup>
            </UniformGrid.RenderTransform>
            <UniformGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </UniformGrid.Background>
        </UniformGrid>

    </Grid>
</Window>
